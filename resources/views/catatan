Catatan ubah basis data
1. Tambah tabel Shapes
2. Tx`
3. Buat relasi Items-Shapes relasi shapeId dan id


create view view_item_details as select 
i.id as itemId, i.name as itemName,
s.id as sizeId, s.name as sizeName,
p.id as packingId, p.name as packingName, p.shortname as pshortname,
f.id as freezingId, f.name as freezingName, 
g.id as gradeId, g.name as gradeName, 
sp.id as speciesId, sp.name as speciesName, 
sh.id as shapesId, sh.name as shapesName,
concat(sp.name, 		" ", sh.name, " ", g.name, " ", s.name, " ", f.name, " ", i.weightbase, " Kg/", p.shortname, " ", i.name) as name, 
concat(sp.nameBahasa, 	" ", sh.name, " ", g.name, " ", s.name, " ", f.name, " ", i.weightbase, " Kg/", p.shortname, " ", i.name) as nameBahasa,
concat(sp.nameBahasa, 	" ", g.name, " ", s.name) as nameForPurchaseInvoice,
ROUND(i.amount,2) as amount, round(i.amountUnpacked,2) as amountUnpacked, i.baseprice as baseprice, i.weightbase as weightbase
FROM
items i join sizes s on i.sizeId=s.id
join packings p on i.packingId=p.id
join freezings f on i.freezingId=f.id
join grades g on i.gradeId=g.id
join species sp on s.speciesId=sp.id
join shapes sh on i.shapeId= sh.id
where i.isActive=1 and p.isActive=1 and f.isActive=1 and g.isActive=1 and sp.isActive=1 and sh.isActive=1
order by sp.name, sh.name, g.name asc, i.weightbase, s.name, f.name, i.name;